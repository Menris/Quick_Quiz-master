<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient android:endColor="#eb0c26" android:startColor="#5eda0b" />
            <stroke android:color="#39e20b" />
            <padding android:left="2dp" android:top="3dp" android:right="2dp"
                android:bottom="3dp" />

            <corners
                android:radius="30dp"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#00D4BF"
                />

        </shape>
    </item>

</selector>