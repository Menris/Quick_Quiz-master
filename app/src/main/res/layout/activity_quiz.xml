<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_white"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.project.ad.testing_app_project.Test.Quiz">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </ScrollView>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_next"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radioGroupAB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_next"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_questionA"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:fontFamily="casual"
                android:onClick="onRadioButtonClicked"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="15"
                android:text="A"
                android:textAlignment="center"
                android:textColor="@color/textColorPrimary"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/radio_questionB"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:fontFamily="casual"
                android:onClick="onRadioButtonClicked"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="15"
                android:text="B"
                android:textAlignment="center"
                android:textColor="@color/textColorPrimary"
                android:textSize="24sp" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroupCD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_questionC"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:fontFamily="casual"
                android:onClick="onRadioButtonClicked"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="15"
                android:text="C"
                android:textAlignment="center"
                android:textColor="@color/textColorPrimary"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/radio_questionD"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:fontFamily="casual"
                android:onClick="onRadioButtonClicked"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="15"
                android:text="D"
                android:textAlignment="center"
                android:textColor="@color/textColorPrimary"
                android:textSize="24sp" />

        </RadioGroup>
    </RadioGroup>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.39"
        android:background="@drawable/buttonshape_navigation"
        android:fontFamily="casual"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/textView_ProgressNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/scrollView2"
        android:text="Qprogress"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioGroup"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_ProgressNumber"
        android:gravity="center">

        <TextView
            android:id="@+id/textView_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_ProgressNumber"
            android:background="@drawable/textview_question"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Question?"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout4"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scrollView2"
        android:layout_toStartOf="@+id/textView_ProgressNumber"
        android:fontFamily="casual"
        android:text="Quiz title "
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>
